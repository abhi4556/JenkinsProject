@Library('shared-library') _

pipeline {
    agent any
    stages {
            stages {
        stage('Checkout') {
            steps {
                // Checkout to a specific branch
                echo "Pulling shared-library branch"
                checkout([$class: 'GitSCM', branches: [[name: 'shared-library']], userRemoteConfigs: [[url: 'https://github.com/abhi4556/JenkinsProject.git']]])
            }
        }
        stage('Greeting') {
            steps {
                script {
                    // Call the default function
                    greet('Jenkins')

                    // Call the farewell function
                    greet.farewell('Jenkins')

                    // Call the personalizedGreeting function
                    greet.personalizedGreeting('Jenkins', 'Hope you are enjoying Jenkins!')
                }
            }
        }
    }
}
